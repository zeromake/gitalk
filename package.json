{
  "name": "@zeromake/gitalk",
  "version": "1.5.1",
  "description": "A comment plugin base on GitHub issues",
  "keywords": [
    "comment",
    "plugin",
    "lib",
    "GitHub"
  ],
  "main": "docs/dist/gitalk.js",
  "scripts": {
    "prepublishOnly": "npm run build",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --inline --hot --no-info --progress",
    "build": "npm run clean && npm run build:umd && npm run build:comp && npm run build:min",
    "build:umd": "cross-env MODULE=umd NODE_ENV=production webpack --hide-modules --config webpack.config.js",
    "build:comp": "cross-env NODE_ENV=production webpack --config webpack.config.comp.js",
    "build:min": "cross-env NODE_ENV=production webpack --config webpack.config.min.js",
    "clean": "rimraf ./docs/dist",
    "lint": "eslint src",
    "coverage": "jest --coverage",
    "test": "jest"
  },
  "author": "Liucw",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "9.6.1",
    "babel-eslint": "10.0.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "8.0.6",
    "babel-plugin-add-module-exports": "^1.0.2",
    "cross-env": "5.2.0",
    "css-loader": "3.2.0",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "6.2.2",
    "eslint-config-o2team": "0.1.6",
    "eslint-plugin-react": "^7.14.3",
    "jest": "24.9.0",
    "mini-css-extract-plugin": "^0.8.0",
    "moxios": "0.4.0",
    "postcss-loader": "3.0.0",
    "raw-loader": "^3.1.0",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "react-test-renderer": "16.9.0",
    "rimraf": "3.0.0",
    "sinon": "7.4.1",
    "style-loader": "1.0.0",
    "stylus": "^0.54.7",
    "stylus-loader": "^3.0.2",
    "url-loader": "2.1.0",
    "webpack": "4.39.3",
    "webpack-cli": "^3.3.7",
    "webpack-dev-server": "3.8.0"
  },
  "dependencies": {
    "autosize": "4.0.2",
    "axios": "0.19.0",
    "date-fns": "2.0.1",
    "es6-promise": "4.2.8",
    "github-markdown-css": "3.0.1",
    "node-polyglot": "2.3.1",
    "preact": "8.5.2",
    "preact-compat": "3.19.0",
    "react-flip-move": "3.0.3"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.(css|less|scss|styl)$": "<rootDir>/src/__mocks__/style.js",
      "^!!raw-loader": "<rootDir>/src/__mocks__/text.js"
    },
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "coveragePathIgnorePatterns": [
      "src/gitalk.jsx",
      "src/graphql/getComments.js"
    ],
    "globals": {
      "VERSION": "1.0.0-test"
    },
    "setupFilesAfterEnv": [
      "./src/__mocks__/setup.js"
    ]
  },
  "browserslist": [
    "last 3 versions"
  ]
}
